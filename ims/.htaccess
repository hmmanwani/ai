<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /ims/

    # Serve real files and dirs as-is
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Send everything else into public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
