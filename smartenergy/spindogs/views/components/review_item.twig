{# Review Item Component

Parameters:
 - review_fields: Object containing review data (title, content, name, rating, image)
 - show_image: Boolean to control image display (default: true)
 - card_class: Additional CSS classes for the card
#}

{% set show_image = show_image|default(true) %}
{% set card_class = card_class|default('') %}

<div class="review-card {{ card_class }}">
    {% if show_image and review_fields.image %}
    <div class="review-image">
        <img src="{{ review_fields.image.url }}" 
             alt="{{ review_fields.image.alt }}" 
             loading="lazy"
             data-object-fit="cover">
    </div>
    {% endif %}
    <div class="review-content">
        {% if review_fields.rating %}
        <div class="review-rating">
            {% for y in range(1, review_fields.rating, 1) %}
                <span class="icon icon-star"></span>
            {% endfor %}
        </div>
        {% endif %}
        {% if review_fields.title %}
        <h3 class="review-title">
            <span>"</span>{{ review_fields.title }}<span>"</span>
        </h3>
        {% endif %}
        {% if review_fields.content %}
        <div class="review-text">
            {{ review_fields.content }}
        </div>
        {% endif %}
        {% if review_fields.name %}
        <div class="review-author">{{ review_fields.name }}</div>
        {% endif %}
    </div>
</div>
