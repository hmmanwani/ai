{# 

    Image Include

    Usage:
    {% include 'image.twig' with 
        { 
            image_id: fields.image.id, 
            object_fit: 'cover', 
            attributes: "data-something='something' "
        } 
    %}
 #}


{% set image = get_image(image_id) %}
<picture>
    <source srcset="{{ image.src|resize(1920)|e('esc_url') }}" media="(min-width: 1200px)" >
    <source srcset="{{ image.src|resize(1200)|e('esc_url') }}" media="(min-width: 992px)" >
    <source srcset="{{ image.src|resize(992)|e('esc_url') }}" media="(min-width: 768px)" >
    <source srcset="{{ image.src|resize(768)|e('esc_url') }}" media="(min-width: 576px)" >
    <source srcset="{{ image.src|resize(576)|e('esc_url') }}" >
    <img src="{{ image.src|e('esc_url') }}" alt="{{ image.alt }}" data-object-fit="{{ object_fit ?: "cover" }}" loading="lazy" {{ atttributes }}>
</picture>