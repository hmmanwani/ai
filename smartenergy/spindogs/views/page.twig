{% extends "layouts/master.twig" %}

{% block content %}

    {% if fields.banner_image %}
        {% set has_banner_image = true %}
    {% else %}
        {% set has_banner_image = false %}
    {% endif %}

    {% include 'banners/flex.twig' with {
        'banner_modifiers' : '__flex',
        'has_banner_image' : has_banner_image,
        'show_svg' : 1,
        'banner_image' : fields.banner_image,
        'banner_title' : fields.banner_title ? fields.banner_title : post.post_title,
        'banner_text' : fields.banner_content
    } %}

    {% include 'flex/flex.twig' %}

{% endblock %}
