<section class="banner {{ banner_modifiers ? banner_modifiers : '' }}">
    <div class="banner-wrap">
        <div class="container">
            <div class="row banner-wrap-row">
                <div class="col-md-6 col-lg-5 col-xxl-4">
                    <div class="banner-content">
                        {% if banner_title %}
                        <h1 class="banner-title">{{ banner_title }}</h1>
                        {% endif %}
                        {% if banner_text %}
                        <p class="banner-text">
                            {{ banner_text }}
                        </p>
                        {% endif %}
                    </div>
                </div><!-- column -->
                <div class="col-md-6 col-lg-7 col-xl-6 offset-xl-1 offset-xxl-2 d-flex align-items-center d-lg-block">
                    <!-- @BE there are no image crops here as the intended use is for scalable svgs -->
                    {% if banner_image %}
                    <div class="banner-image">
                        <img src="{{ banner_image.url }}" alt="{{ banner_image.alt }}" data-object-fit="cover">
                    </div><!-- column -->
                    {% endif %}

                </div><!-- row -->
            </div><!--container-->
        </div><!--wrap-->
    </div>
</section>
    <!--banner-->